<!DOCTYPE html>
<html>
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-155198768-4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-155198768-4');
    </script>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="wrapper">
      <%- include('./_header') %>
      <div class="content container-fluid">
        <div class="row">
          <div class="col-lg-1 background"></div>
          <div class="col-lg-8 col-9 message text-center" id="message"></div>
          <div class="col-lg-2 col-3 text-right margin-row">
            <% if (user) { %>
              <button type="button" class="btn btn-outline-primary" onclick="updateItems()">保存</button>
            <% } else { %>
              <button type="button" class="btn btn-outline-secondary" disabled>保存</button>
            <% } %>
          </div>
          <div class="col-lg-1 background"></div>
        </div>
        <div class="row">
          <div class="col-lg-1 background"></div>
          <div class="col-lg-10 col-12">
            <h3 class="text-center">単品</h3>
          </div>
          <div class="col-lg-1 background"></div>
        </div>
        <div class="row">
          <div class="col-lg-1 background"></div>
          <div class="col-lg-10 col-12">
            <table class="table table-hover table-bordered">
              <thead>
                <tr>
                  <th class="text-center" scope="col">#</th>
                  <th class="text-center" scope="col">名前</th>
                  <th class="text-center" scope="col">売値</th>
                </tr>
              </thead>
              <tbody>
                <% standAloneFossils.forEach(fossil => { %>
                  <tr id="row<%= fossil.fossil_id %>" onclick="addItems(<%= fossil.fossil_id %>)">
                    <td class="align-middle table-text text-center"><%= fossil.fossil_id %></td>
                    <td class="align-middle table-text text-center"><%= fossil.name %></td>
                    <td class="align-middle table-text text-right"><%= fossil.value %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="col-lg-1 background"></div>
        </div>
        <div class="row">
          <div class="col-lg-1 background"></div>
          <div class="col-lg-10 col-12">
            <h3 class="text-center">複合品</h3>
          </div>
          <div class="col-lg-1 background"></div>
        </div>
        <div class="row">
          <div class="col-lg-1 background"></div>
          <div class="col-lg-10 col-12">
            <table class="table table-hover table-bordered">
              <thead>
                <tr>
                  <th class="text-center" scope="col">#</th>
                  <th class="text-center" scope="col">名前</th>
                  <th class="text-center" scope="col">売値</th>
                </tr>
              </thead>
              <tbody>
                <% multiPartFossils.forEach((fossil, index) => { %>
                  <% if (index === 0 || fossil.species !== multiPartFossils[index - 1].species) { %>
                    <tr>
                      <td colspan="3" class="table-subheading-text text-center"><%= fossil.species %></td>
                    </tr>
                  <% } %>
                  <tr id="row<%= fossil.fossil_id %>" onclick="addItems(<%= fossil.fossil_id %>)">
                    <td class="align-middle table-text text-center"><%= fossil.fossil_id %></td>
                    <td class="align-middle table-text text-center"><%= fossil.name %></td>
                    <td class="align-middle table-text text-right"><%= fossil.value %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="col-lg-1 background"></div>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script>
      let fossils = [<%= user ? user.fossils : null %>];

      $(document).ready(function () {
        fossils.forEach(fossil => {
          let row = document.getElementById('row' + String(fossil));
          row.classList.add('getted');
        });
      });

      function addItems(fossilId) {
        let row = document.getElementById('row' + String(fossilId));
        if (fossils.indexOf(fossilId) < 0) {
          fossils.push(fossilId);
          row.classList.add('getted');
        } else {
          fossils = fossils.filter(n => n !== fossilId);
          row.classList.remove('getted');
        }
      }

      function updateItems() {
        $.ajax({
          url: '/fossil/update',
          type: 'POST',
          data: {
            'fossils': fossils
          }
        }).then((data) => {
          let tag = document.getElementById('message');
          tag.innerHTML = data.message;
          tag.classList.add('success-message');
        }).catch((error) => {
          let tag = document.getElementById('message');
          tag.innerHTML = error.responseJSON.error;
        });
      }
    </script>
  </body>
</html>
